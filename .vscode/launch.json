{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Simple (TS source maps)",
      "program": "${workspaceFolder}/simple-debug.js",
      "runtimeExecutable": "${env:USERPROFILE}\\node-portable\\node-v20.18.0-win-x64\\node.exe",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "sourceMaps": true,
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
      "console": "integratedTerminal"
    }
  ]
}
